<main>
    <div class="block-reviews">
        <h3 style="padding-left: 30px">Оставить отзыв: </h3>
        <form id="form-reviews">
            <input placeholder="Имя" type="text" id="name" name="name" required>
            <input placeholder="Название товара" type="text" id="nameProduct" name="nameBoat" required>
            <input placeholder="Город" type="text" id="city" name="city" required>
            <input placeholder="Комментарий" type="text" id="comment" name="comment" required>
            <input placeholder="Оценка" type="number" id="rating" name="rating" min="1" max="10" required><br>
            <div class="submit_button">
                <input type="submit" value="Отправить">
            </div>
        </form>

        <div id="reviews">
            <table style="margin: 1% 7%" id="reviews-table">
                <tr class="reviews-table__header">
                    <th>Имя</th>
                    <th>Название товара</th>
                    <th>Город</th>
                    <th>Комментарий</th>
                    <th>Оценка</th>
                </tr>
            </table>
        </div>
    </div>
</main>
